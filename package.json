{
  "name": "meprpa",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "rm -rf {build,coverage,node_modules}",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build --dotfiles true",
    "test": "npm run test:unit && npm run test:integration",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:prettier": "prettier --plugin prettier-plugin-svelte --check \"{src,tests}/**/*.{ts,svelte,html}\"",
    "lint:eslint": "eslint --color \"{src,tests}/**/*.{ts,svelte}\"",
    "format": "prettier --plugin prettier-plugin-svelte --write \"{src,tests}/**/*.{ts,svelte,html}\"",
    "test:integration": "playwright test",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.20.4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/svelte": "^4.0.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/papaparse": "^5.3.14",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "gh-pages": "^6.1.1",
    "jsdom": "^24.0.0",
    "papaparse": "^5.4.1",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.10",
    "svelte-check": "^3.4.3",
    "tslib": "^2.6.2",
    "typescript": "^5.5.4",
    "vite": "^4.5.5",
    "vitest": "^2.0.5"
  },
  "type": "module"
}
